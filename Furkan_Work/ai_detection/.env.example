# Kafka Ayarları
KAFKA_BOOTSTRAP=kafka:9092
KAFKA_GROUP_ID=ai_unit_group

# Redis Ayarları
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Veritabanı
DB_PATH=/app/data/videos.db

# Hugging Face API Token (buraya gerçek token girilecek)
HF_TOKEN=your_huggingface_token_here

# Segment Algılama Ayarları
BUFFER_TIMEOUT=2
DETECTION_LOOKAHEAD_SECONDS=2
DETECTION_MIN_FOR_START=3
DETECTION_TOLERANCE_SECONDS=4
DETECTION_MIN_FOR_CONTINUATION=2
SEGMENT_PADDING_SECONDS=2
